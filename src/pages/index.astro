---
import Layout from '../layouts/Layout.astro';

// You can replace these with your own social links
const socialLinks = [
	{ name: 'Website', url: '#', icon: 'fa-solid fa-globe' },
	{ name: 'X', url: '#', icon: 'fa-brands fa-x-twitter' },
	{ name: 'Discord', url: '#', icon: 'fa-brands fa-discord' },
	{ name: 'GitHub', url: '#', icon: 'fa-brands fa-github' },
];

const categories = [
	{ name: 'BRAND', link: '#' },
	{ name: 'NFT', link: '#' },
	{ name: 'TOKEN', link: '#' },
	{ name: 'CONTENT CREATOR', link: '#' },
	{ name: 'GAMING', link: '#' },
];
---

<Layout title="Your Name - Profile">
	<main class="max-w-[900px] mx-auto px-4 py-8">
		<!-- Hero Banner -->
		<div class="relative w-full h-64 md:h-96 rounded-lg overflow-hidden mb-8">
			<img
				src="https://via.placeholder.com/1920x400"
				alt="Profile Banner"
				class="w-full h-full object-cover"
			/>
		</div>

		<!-- Profile Section -->
		<div class="relative -mt-20 mb-8">
			<div class="flex flex-col items-center">
				<div class="w-40 h-40 rounded-full overflow-hidden border-4 border-white dark:border-gray-800 bg-white dark:bg-gray-800">
					<img
						src="https://via.placeholder.com/160"
						alt="Profile Picture"
						class="w-full h-full object-cover"
					/>
				</div>
				<h1 class="text-3xl font-bold mt-4">Your Name</h1>
				<p class="text-gray-600 dark:text-gray-400 mt-2">Your Tagline</p>
			</div>
		</div>

		<!-- Categories -->
		<div class="flex flex-wrap justify-center gap-4 mb-8">
			{
				categories.map((category) => (
					<a
						href={category.link}
						class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-full text-sm font-medium hover:bg-primary-100 dark:hover:bg-gray-700 transition-colors"
					>
						{category.name}
					</a>
				))
			}
		</div>

		<!-- Description -->
		<div class="max-w-2xl mx-auto text-center mb-12">
			<p class="text-gray-600 dark:text-gray-400">
				Your detailed description goes here. Make it engaging and informative, highlighting your key achievements and interests.
			</p>
		</div>

		<!-- Social Links -->
		<div class="flex justify-center gap-6">
			{
				socialLinks.map((link) => (
					<a
						href={link.url}
						class="w-12 h-12 flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800 hover:bg-primary-100 dark:hover:bg-gray-700 transition-colors"
						title={link.name}
					>
						<i class={link.icon} />
					</a>
				))
			}
		</div>

		<!-- Featured Projects/Content -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
			{
				[1, 2, 3].map((item) => (
					<div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
						<img
							src={`https://via.placeholder.com/400x250`}
							alt={`Project ${item}`}
							class="w-full h-48 object-cover"
						/>
						<div class="p-6">
							<h3 class="text-xl font-semibold mb-2">Project Title {item}</h3>
							<p class="text-gray-600 dark:text-gray-400">
								Brief description of the project or content piece.
							</p>
						</div>
					</div>
				))
			}
		</div>
	</main>
</Layout>
