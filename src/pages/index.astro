---

<Layout title={`${profileInfo.nickname} - Profile`}>
	<main class="max-w-[900px] mx-auto px-4 py-8">
		<!-- Hero Banner -->
		<div
			class="relative w-full h-64 md:h-96 rounded-lg overflow-hidden mb-8"
		>
			<img
				src={profileAssets.banner}
				alt="Profile Banner"
				class="w-full h-full object-cover"
			/>
		</div>

		<!-- Profile Section -->
		<div class="relative -mt-20 mb-8">
			<div class="flex flex-col items-center">
				<div
					class="w-40 h-40 rounded-full overflow-hidden border-4 border-white dark:border-gray-800 bg-white dark:bg-gray-800 shadow-lg"
				>
					<img
						src={profileAssets.profile}
						alt="Profile Picture"
						class="w-full h-full object-cover"
					/>
				</div>
				<h1 class={`text-3xl font-bold mt-4 ${theme.headingClass}`}>
					{profileInfo.name}
				</h1>
				<p class="text-sm text-gray-500 dark:text-gray-500 mt-1">
					({profileInfo.nickname})
				</p>
				<p class="text-gray-600 dark:text-gray-400 mt-2">
					{profileInfo.tagline}
				</p>
			</div>
		</div>

		<!-- Categories -->
		<div class="hidden flex flex-wrap justify-center gap-4 mb-8">
			{
				categories.map((category) => (
					<a
						href={category.link}
						target="_blank"
						rel="noopener noreferrer"
						class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-full text-sm font-medium hover:bg-primary-100 dark:hover:bg-gray-700 transition-colors"
					>
						{category.name}
					</a>
				))
			}
		</div>

		<!-- Description -->
		<div class="max-w-2xl mx-auto text-center mb-12">
			<p
				class="text-gray-600 dark:text-gray-400"
				set:html={profileInfo.description}
			/>
		</div>

		<!-- Social Links -->
		<div class="flex flex-col items-center mb-16">
			<!-- Social Profiles -->
			<div>
				<h2
					class={`text-2xl text-center mb-3 ${theme.sectionHeadingClass}`}
				>
					Social Profiles
				</h2>
				<p
					class="text-gray-600 dark:text-gray-400 text-center mb-6 max-w-md mx-auto"
				>
					Connect with me on various platforms. I stream on Twitch and
					Kick, share content on YouTube, and post updates on X.
				</p>
				<div class="flex flex-wrap justify-center gap-4 sm:gap-7">
					{
						socialLinks.map((link) => (
							<a
								href={link.url}
								target="_blank"
								rel="noopener noreferrer"
								class={`w-[3rem] h-[3rem] sm:w-[3.6rem] sm:h-[3.6rem] flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800 hover:bg-gradient-to-r ${theme.primaryColor} hover:text-white transition-all duration-300 ease-in-out transform hover:scale-125 relative group ${link.name === "Medium" ? "cursor-not-allowed opacity-50" : ""}`}
								title={
									link.name === "Medium"
										? "Coming Soon!"
										: link.name
								}
							>
								{link.icon === "custom" ? (
									<img
										src={link.customIcon}
										alt={link.name}
										class="w-[1.5rem] h-[1.5rem] sm:w-[2rem] sm:h-[2rem]"
									/>
								) : (
									<i
										class={`${link.icon} text-xl sm:text-2xl`}
									/>
								)}
								<span
									class={`absolute -bottom-8 left-1/2 transform -translate-x-1/2 bg-gradient-to-r ${theme.primaryColor} text-white text-xs py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap`}
								>
									{link.name === "Medium"
										? "Coming Soon!"
										: link.name}
								</span>
							</a>
						))
					}
				</div>
			</div>
		</div>

		<!-- Community Links -->
		<div class="flex flex-col items-center mb-16">
			<div>
				<h2
					class={`text-2xl text-center mb-3 ${theme.sectionHeadingClass}`}
				>
					Community
				</h2>
				<p
					class="text-gray-600 dark:text-gray-400 text-center mb-6 max-w-md mx-auto"
				>
					Join my Telegram communities to stay updated with the latest
					news and connect with like-minded people.
				</p>
				<div class="flex flex-wrap justify-center gap-4 sm:gap-7">
					{
						communityLinks.map((link) => (
							<a
								href={link.url}
								target="_blank"
								rel="noopener noreferrer"
								class={`w-[3rem] h-[3rem] sm:w-[3.6rem] sm:h-[3.6rem] flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800 hover:bg-gradient-to-r ${theme.primaryColor} hover:text-white transition-all duration-300 ease-in-out transform hover:scale-125 relative group`}
								title={link.name}
							>
								<i class={`${link.icon} text-xl sm:text-2xl`} />
								<span
									class={`absolute -bottom-8 left-1/2 transform -translate-x-1/2 bg-gradient-to-r ${theme.primaryColor} text-white text-xs py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap`}
								>
									{link.name}
								</span>
							</a>
						))
					}
				</div>
			</div>
		</div>

		<!-- Ventures & Investments -->
		<div class="flex flex-col items-center mb-12">
			<div>
				<h2
					class={`text-2xl text-center mb-3 ${theme.sectionHeadingClass}`}
